<html>
<head>
    <title>Export Seeds</title>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js"></script>
    <script type="text/javascript">
        var lastExport = "{{ lastExport }}";
        $("document").ready(function () {
            $("#submitBtn").val($("#submitBtn").val() + lastExport);
            $("#submitBtn").click(function () {
                getResultsByPage(1);
            });
        });

        function getResultsByPage(pageNum) {
            $.ajax({
                url: "http://jdarchive.org/zeega/api/items/search?&type=Website&sort=relevant&limit=500&page=" + pageNum + "&published=1",
                dataType: "json",
                type: "GET",
                success: function (r) {
                    $.each(r.items, function (index, val) {
                        var line = val.date_created + ", website, " + (val.attributes.frequency || "once") + ", " + (val.attributes.scope || "page") + ", " + val.id;
                        $("#resultsDiv").html($("#resultsDiv").html() + line + "</br>");
                    });
                    var lastItem = r.returned_items_count * r.query.limit;
                    
                    if (lastItem < r.item_count) {
                        //getResultsByPage(pageNum + 1);
                    }
                }
            });
        }
    </script>
</head>
    <body>
        <input type="button" id="submitBtn" value="Export Seeds created after " />
        <div id="resultsDiv"></div>
    </body>
</html>