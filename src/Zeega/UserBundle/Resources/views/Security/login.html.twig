<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta name="robots" content="noindex,follow">
	<meta name="description" content="">
	<meta name="keywords" content="">
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<link href="{{ asset('js/lib/bootstrap-2.0.2/css/bootstrap.css')}}" rel="stylesheet" type="text/css">
	<link href="{{ asset('js/lib/bootstrap-2.0.2/css/bootstrap-responsive.css')}}" rel="stylesheet">
</head>

{% set locale = app.session.locale  %}

{% set page = 'login'%}

<body>
		<div class="login-modal-header">

			<h2 style="padding-top:20px;padding-bottom:30px;">
				{% if header is defined %}
					{% if header == "collection"%}
						{% trans %}jda.login.savecollection{% endtrans %} 
					{% endif %} 
				{% endif %} 
				{% trans %}jda.login.header{% endtrans %} 
				<a href="{{path('fos_user_registration_register', { '_locale': locale })}}">{% trans %}jda.login.register{% endtrans %}</a>
			</h2>
		</div>
		<div class="login-modal-body">
			<div style="clear:both"></div>
		
				<form action="{{ path("fos_user_security_check") }}" method="post">
					<div class="box">
				    	<label for="username">{% trans %}jda.login.username{% endtrans %}
					    <input type="text" id="username" name="_username" value="{{ last_username }}" class="input_text" /></label>
					    <label for="password">{% trans %}jda.login.password{% endtrans %}
					    <input type="password" id="password" name="_password" class="input_text" /></label>
				    	<input class="btn" type="submit" id="_submit" name="_submit" value="{% trans %}jda.login.login{% endtrans %}" class="login-button"/>
						<br>	{% if error %}
	       		<div class="error" style="width:200px; text-align:right; color:red; font-weight:bold">{{ error.message }}</div>
	    	{% endif %}<br>
					</div>
				</form>
		</div>
</body>
</html>
