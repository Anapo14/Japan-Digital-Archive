
{% block fos_user_content %}		
				
				<form action="{{ path("fos_user_security_check") }}" method="post">
					<div class="box">
				    	<label for="username">{% trans %}jda.login.username{% endtrans %}
					    <input type="text" id="username" name="_username" value="{{ last_username }}" class="input_text" /></label>
					    <label for="password">{% trans %}jda.login.password{% endtrans %} <a style="font-size: 9px; padding-left: 85px;" href="{{path('fos_user_resetting_request', { '_locale': locale})}}" >{% trans %}jda.login.forgot{% endtrans %}</a>
					    <input type="password" id="password" name="_password" class="input_text" /></label>
				    	<input class="btn" type="submit" id="_submit" name="_submit" value="{% trans %}jda.login.button{% endtrans %}" class="login-button"/>
						<br>	
						{% if error %}
	       					<div class="error" style="width:200px; text-align:right; color:red; font-weight:bold">{{ error.message }}</div>
	    				{% endif %}
	    				<br>
					</div>
				</form>

{% endblock fos_user_content %}
